body {
  margin: 0;
  min-height: 100vh;
  display: grid;
  place-items: center;
  font-family: Arial, sans-serif;
  background: #f7f8fa;
  color: #17202a;
}

main {
  width: min(760px, 92vw);
  background: #fff;
  border: 1px solid #d9dee7;
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 10px 24px rgba(23, 32, 42, 0.06);
}

h1 {
  margin: 0 0 0.75rem;
  font-size: clamp(1.5rem, 2.6vw, 2.2rem);
}

p {
  margin: 0.4rem 0;
  line-height: 1.6;
}

code {
  background: #eef2f7;
  padding: 0.2rem 0.4rem;
  border-radius: 6px;
}
